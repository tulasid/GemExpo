<!DOCTYPE html>
<html>
	<head>
		<title>GEM EXPO | <%= @page_title || "" %></title>
		<%= stylesheet_link_tag('gemexpo', :media => 'all') %>
	</head>
	<body>
		<div id="header">
			<h1>GEM EXPO</h1>
		</div>
		<div id="main">
			<% if !flash[:notice].blank? %>
				<div class="notice">
					<%= flash[:notice] %>
				</div>
			<% end %>
			<div id="content">
				<%= yield %>
			</div>
		</div>
		<div id="footer">
			<p id="copyright">&copy; vasudhaika.com / Rails Team</p>
		</div>
	</body>
</html>
